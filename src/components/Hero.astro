---
import { t } from "i18next";
import chris from '../assets/chris.webp';
---

<section class="flex flex-col-reverse items-center p-8 mt-12 md:flex-row md:justify-between md:items-center md:mt-24 lg:pl-32 lg:pr-32 xl:pl-40 xl:pr-40 2xl:pl-56 2xl:pr-56 2xl:mt-32">
    <div class="max-w-lg md:max-w-md lg:max-w-md xl:max-w-lg 2xl:max-w-4xl" >
        <p class="text-lg font-light text-[#ABB2BF] mb-4 md:text-xl xl:text-2xl 2xl:text-3xl"> {t("Hero.greeting")} </p>
        <h1 class="text-4xl font-semibold mb-8 md:text-5xl 2xl:text-6xl"><span class="text-[#C778DD]"> {t("Hero.position")} </span> {t("Hero.city")} </h1>
        <div class="flex items-center gap-8">
            <a class="flex items-center font-semibold hover:text-[#ABB2BF] text-lg 2xl:text-2xl" href="https://www.linkedin.com/in/christopher-jared-gonzález-martínez-12342425a/" target="_blank">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-linkedin" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"></path>
                    <path d="M8 11l0 5"></path>
                    <path d="M8 8l0 .01"></path>
                    <path d="M12 16l0 -5"></path>
                    <path d="M16 16v-3a2 2 0 0 0 -4 0"></path>
                 </svg>
                 LinkedIn
            </a>
            <a class="flex items-center font-semibold hover:text-[#ABB2BF] text-lg 2xl:text-2xl" href="https://github.com/theJarDev" target="_blank">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-github" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"></path>
                 </svg>
                 GitHub
            </a>
            <a class="flex items-center font-semibold hover:text-[#ABB2BF] text-lg 2xl:text-2xl" href="#">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-file-cv" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
                    <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"></path>
                    <path d="M11 12.5a1.5 1.5 0 0 0 -3 0v3a1.5 1.5 0 0 0 3 0"></path>
                    <path d="M13 11l1.5 6l1.5 -6"></path>
                </svg>
                 CV
            </a>
        </div>
    </div>
    <img class="rounded-full object-cover w-60 h-60 mb-12 md:mb-0 lg:w-72 lg:h-72 2xl:w-96 2xl:h-96" src={chris.src} alt="Christopher Jared">
        
</section>

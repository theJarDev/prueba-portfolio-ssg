---
interface Props {
    img:ImageMetadata,
    tecnology:string,
    mainColor:string,
    secondaryColor:string
}

const { img, tecnology, mainColor, secondaryColor } = Astro.props
---

<div class= "flex flex-col items-center w-36 border-[1px] border-[#ABB2BF] bg-black bg-opacity-20 backdrop-filter backdrop-blur-sm hover-color">
    <img class="w-full p-4 border-b-[1px] text-[#dddddd] " src={img.src} alt={tecnology}>
    <span class="text-base font-bold p-2"> {tecnology} </span>
</div>

<style define:vars={{mainColor, secondaryColor}}>

    .hover-color {
        transition: border-color 1s ease;
        transition: background-color 0.5s ease;
        transition: box-shadow 0.5s;
    }

    .hover-color:hover{
        border-color: var(--mainColor);
        background-color: var(--secondaryColor);
        box-shadow: 0px 0px 10px 0px var(--mainColor);
    }
    
</style>
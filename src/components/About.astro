---
import { t } from "i18next";
import { localizePath } from "astro-i18next";

import chris from "../assets/chris1.webp";
interface Props {
    showBtn:boolean,
    linesToShow:number
}
const { showBtn, linesToShow } = Astro.props;
---

<div class="flex flex-col items-center flex-wrap gap-8 w-full lg:flex-row lg:justify-between">
    <img class="rounded-full object-cover w-60 h-60  md:mb-0 lg:w-72 lg:h-72 2xl:w-96 2xl:h-96" src={chris.src} alt="Christopher Jared">
    <div class="flex flex-col gap-6">
        <p class="text-base font-normal max-w-lg lg:max-w-md xl:max-w-lg 2xl:text-lg 2xl:max-w-2xl info">
            {t("About.greeting")} <span class="text-[#C778DD]"> {t("About.position")} </span> {t("About.first")}
            <br><br>
            {t("About.second")}
            <br><br>
            {t("About.third")}
        </p>
        {showBtn && <a href={ localizePath("/about-me") } class="pt-2 pb-2 pl-4 pr-4 w-fit border-[1px] border-[#C778DD] live"> {t("About.btn")} </a>}
    </div>
</div>

<style define:vars={{linesToShow}}>
    .live:hover {
        background-color: #c778dd33;
        box-shadow: 0px 0px 5px 0px #C778DD;
    }

    p {
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: var(--linesToShow);
    }

    @media (min-width:1650px) {
        .info{
            max-width: 48rem;
        }
    }

</style>

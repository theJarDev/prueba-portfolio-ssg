---
import ViewPDF from './ViewPDF'
import { t } from "i18next";
interface Props {
    img:ImageMetadata,
    year:string,
    school:string,
    career:string,
    button:boolean,
    src?:string,
    download?:string
}

const {img, year, school, career, button, src, download} = Astro.props;
---

<div class="flex flex-col justify-end max-w-2xl border-[1px] border-[#ABB2BF] bg-black bg-opacity-20 backdrop-filter backdrop-blur-sm lg:max-w-xs xl:max-w-sm">
    <img class="p-8 " src={img.src} alt={school}>
    <span class="pt-2 pb-2 pl-4 pr-4 border-t-[1px] border-b-[1px] border-[#ABB2BF]"> {year} - {school} </span>
    <span class="pt-2 pb-2 pl-4 pr-4 "> {career} </span>
    { button && <a class="w-fit border-[1px] border-[#C778DD] ml-4 mb-2 pt-1 pb-1 pl-4 pr-4 live" href={src} download={`${download}.pdf`}> {t("Education.button")} </a> }
    <!-- { button && <ViewPDF client:visible src={src} /> } -->
</div>

<style>
    
    .live:hover {
        background-color: #c778dd33;
        box-shadow: 0px 0px 5px 0px #C778DD;
    }
</style>
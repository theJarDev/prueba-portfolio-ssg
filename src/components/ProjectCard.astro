---
interface Props {
    img1:ImageMetadata,
    img2:ImageMetadata,
    tecnologies:string,
    title:string,
    description:string,
    link:string,
    github:string,
    linkText?:string,
}
const { img1, img2, tecnologies, title, description, link, github, linkText = 'Live' } = Astro.props;
---

<div class="flex flex-col card-hover max-w-2xl border-[1px] border-[#ABB2BF] bg-black bg-opacity-20 backdrop-filter backdrop-blur-sm lg:max-w-xs">
    <img src={img1.src} alt={title} class="w-fit">
    <img src={img2.src} alt={''} class="w-fit absolute card">
    <span class="p-2 border-t-[1px] border-b-[1px] border-[#ABB2BF]"> {tecnologies} </span>
    <div class="flex flex-col gap-4 p-4">
        <h4 class="text-2xl font-medium text-white"> {title} </h4>
        <p class="text-base "> {description} </p>
        <div class="flex gap-4">
            {link.length > 0 && <a href={link} target="_blank" class="border-[1px] border-[#C778DD] pt-2 pb-2 pl-4 pr-4 live">{linkText + ' <~>'} </a>}
            <a href={github} target="_blank" class="border-[1px] border-[#ABB2BF] pt-2 pb-2 pl-4 pr-4 github">GitHub <~></a>
        </div>
    </div>
</div>

<style>
    .card {
        opacity: 0;
        transition: opacity 0.5s ease;
    }

    .card-hover:hover .card {
        opacity: 1;
    }

    .live:hover {
        background-color: #c778dd33;
        box-shadow: 0px 0px 5px 0px #C778DD;
    }

    .github:hover {
        background-color: #abb2bf33;
        box-shadow: 0px 0px 5px 0px #ABB2BF;
    }
</style>
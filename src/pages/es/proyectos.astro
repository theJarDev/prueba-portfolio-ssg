---
import i18next, { t, changeLanguage } from "i18next";
import Layout from "../../layouts/Layout.astro";
import SectionContainer from "../../components/SectionContainer.astro";
import ProjectCard from "../../components/ProjectCard.astro";
import PageTitle from "../../components/PageTitle.astro";
//images
import skillsflix from "../../assets/skillsflix.webp";
import skillsflix2 from "../../assets/skillsflix2.webp";
import alurageek from "../../assets/alurageek.webp";
import alurageek2 from "../../assets/alurageek2.webp";
import org from "../../assets/org.webp";
import org2 from "../../assets/org2.webp";
import portfolio from "../../assets/portfolio.webp";
import portfolio2 from "../../assets/portfolio2.webp";
import blackjack from "../../assets/blackjack.webp";
import blackjack2 from "../../assets/blackjack2.webp";
import todoapp from "../../assets/todoapp.webp";
import todoapp2 from "../../assets/todoapp2.webp";
import dinorun from "../../assets/dinorun.webp";
import dinorun2 from "../../assets/dinorun2.webp";
import ecommercecpp from "../../assets/ecommercecpp.webp";
import ecommercecpp2 from "../../assets/ecommercecpp2.webp";
import fruitknight from "../../assets/fruitknight.webp";
import fruitknight2 from "../../assets/fruitknight2.webp";
import calculator from "../../assets/calculator.webp";
import calculator2 from "../../assets/calculator2.webp";

changeLanguage("es");
---

<Layout lang={i18next.language} title={t("Layout.titles.projects")} description={t("Layout.description.projects")}>
    <PageTitle page={t("Pages.projects.title")} description={t("Pages.projects.description")} />
    <SectionContainer title={t("Sections.projects.web")} viewAll={false} href="">
        <ProjectCard
			img1={skillsflix}
			img2={skillsflix2}
			tecnologies='React Styled-Components Material-UI HTML'
			title={t("Projects.skillsflix.title")}
			description={t("Projects.skillsflix.description")}
			link='https://skillsflix.vercel.app/'
			github='https://github.com/theJarDev/skillsflix'
		/>
		<ProjectCard
			img1={alurageek}
			img2={alurageek2}
			tecnologies='JavaScript HTML CSS'
			title={t("Projects.alurageek.title")}
			description={t("Projects.alurageek.description")}
			link='https://thejardev.github.io/alura-geek/'
			github='https://github.com/theJarDev/alura-geek'
		/>
		<ProjectCard
			img1={org}
			img2={org2}
			tecnologies='React HTML CSS'
			title={t("Projects.org.title")}
			description={t("Projects.org.description")}
			link='https://org-project.vercel.app'
			github='https://github.com/theJarDev/org'
		/>
		<ProjectCard
			img1={portfolio}
			img2={portfolio2}
			tecnologies='Astro Tailwind CSS'
			title={t("Projects.portfolio.title")}
			description={t("Projects.portfolio.description")}
			link='https://jardev.vercel.app/'
			github='https://github.com/theJarDev/portfolio'
		/>
		<ProjectCard
			img1={todoapp}
			img2={todoapp2}
			tecnologies='JavaScript HTML CSS'
			title={t("Projects.todo.title")}
			description={t("Projects.todo.description")}
			link='https://todoapp-jardev.vercel.app'
			github='https://github.com/theJarDev/todoapp'
		/>
		<ProjectCard
			img1={blackjack}
			img2={blackjack2}
			tecnologies='JavaScript HTML CSS'
			title={t("Projects.blackjack.title")}
			description={t("Projects.blackjack.description")}
			link='https://js-blackjack-vite.vercel.app'
			github='https://github.com/theJarDev/js-vite-blackjack'
		/>
    </SectionContainer>
    <SectionContainer title={t("Sections.projects.other")} viewAll={false} href="">
        <ProjectCard
			img1={dinorun}
			img2={dinorun2}
			tecnologies='Assembly WindowsAPI'
			title={t("Projects.dinorun.title")}
			description={t("Projects.dinorun.description")}
			link='https://www.youtube.com/watch?v=JFknK5Auycw'
			github='https://github.com/theJarDev/dinorun'
			linkText="Demo"
		/>
        <ProjectCard
			img1={ecommercecpp}
			img2={ecommercecpp2}
			tecnologies='C++ WindowsAPI'
			title={t("Projects.ecommerce.title")}
			description={t("Projects.ecommerce.description")}
			link='https://www.youtube.com/watch?v=C__m6V6FhwU'
			github='https://github.com/theJarDev/PA-project'
			linkText="Demo"
		/>
        <ProjectCard
			img1={fruitknight}
			img2={fruitknight2}
			tecnologies='C# Unity'
			title={t("Projects.fruitknight.title")}
			description={t("Projects.fruitknight.description")}
			link='https://www.youtube.com/watch?v=1CgmMywOulU'
			github='https://github.com/theJarDev/haptics-design_videogame'
			linkText="Demo"
		/>
        <ProjectCard
			img1={calculator}
			img2={calculator2}
			tecnologies='C++'
			title={t("Projects.matrix.title")}
			description={t("Projects.matrix.description")}
			link=''
			github='https://github.com/theJarDev/matrice-calculator'
		/>
    </SectionContainer>
</Layout>